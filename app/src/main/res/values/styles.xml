<resources>

    <style name="Widget.Theme.SimpleWeather.WeatherMetricView" parent="">
        <item name="wm_textColor">?colorOnPrimaryContainer</item>
        <item name="wm_iconColor">?colorOnPrimaryContainer</item>
        <item name="wm_textSize">@dimen/text_size_16</item>
        <item name="wm_iconSize">@dimen/size_weather_metric_icon</item>
        <item name="wm_textDividerMargin">@dimen/small_150</item>
        <item name="wm_textIconMargin">@dimen/medium_125</item>
    </style>

    <style name="Widget.Theme.SimpleWeather.WeatherMetricView.Spaced" parent="Widget.Theme.SimpleWeather.WeatherMetricView">
        <item name="android:paddingVertical">@dimen/medium_100</item>
        <item name="android:paddingStart">@dimen/small_100</item>
        <item name="android:paddingEnd">@dimen/small_150</item>
    </style>


    <style name="TextAppearance.SimpleWeather.BodyLarge.Primary" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="TextAppearance.SimpleWeather.BodyMedium.Bold" parent="TextAppearance.SimpleWeather.BodyMedium">
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.SimpleWeather.LabelMedium.Variant" parent="TextAppearance.SimpleWeather.LabelMedium">
        <item name="android:textColor">?colorOnSurfaceVariant</item>
    </style>

    <style name="TextAppearance.SimpleWeather.DialogTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="TextAppearance.SimpleWeather.BodyMedium.Variant" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?colorOnSurfaceVariant</item>
    </style>


    <style name="Layout.SimpleWeather.Root" parent="">
        <item name="android:padding">@dimen/padding_layout</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="TextAppearance.SimpleWeather.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="TextAppearance.SimpleWeather.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="TextAppearance.SimpleWeather.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="TextAppearance.SimpleWeather.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="TextAppearance.SimpleWeather.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">sans-serif</item>
    </style>
</resources>